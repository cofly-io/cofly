{
  "name": "cofly",
  "private": true,
  "license": "Apache-2.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:docs": "turbo run dev --filter=docs",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:studio": "pnpm --filter @repo/database db:studio",
    "db:repo-gen": "pnpm --filter @repo/database repo-gen",
    "db:repo-gen:generate": "pnpm --filter @repo/database repo-gen:generate",
    "db:repo-gen:watch": "pnpm --filter @repo/database repo-gen:watch",
    "db:repo-gen:config": "pnpm --filter @repo/database repo-gen:config",
    "prepare": "husky install",
    "start": "turbo run start",
    "start:web": "pnpm --filter web start",
    "clean": "turbo run clean && powershell -Command \"Remove-Item -Path 'node_modules' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "start:docs": "pnpm --filter docs start"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/promise-ftp": "^1.3.8",
    "@types/xml2js": "^0.4.14",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@10.15.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "mysql": "^2.18.1",
    "pnpm": "^10.13.1",
    "xml2js": "^0.6.2",
    "sharp": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "sharp": "workspace:*"
    }
  }
}