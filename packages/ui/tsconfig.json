{
  "extends": "../typescript-config/react-library.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/common": ["../common/dist"],
      "@repo/common/*": ["../common/dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

