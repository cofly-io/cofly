{
  "name": "@repo/services",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.mjs"
    }
  },
  "scripts": {
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit",
    "clean": "powershell -Command \"Remove-Item -Path '.turbo', 'node_modules' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "build": "tsup"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.5",
    "@types/node": "^22.16.5",
    "eslint": "^9.31.0",
    "tsup": "^8.5.0",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@repo/common": "workspace:*",
    "@repo/database": "workspace:*",
    "@repo/knowledge-base": "workspace:*"
  }
}
