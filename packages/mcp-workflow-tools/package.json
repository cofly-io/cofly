{
  "name": "@repo/mcp-workflow-tools",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./dist/*": {
      "types": "./dist/*.d.ts",
      "default": "./dist/*.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "powershell -Command \"Remove-Item -Path '.turbo', 'node_modules', 'dist' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@repo/common": "workspace:*",
    "mcp-handler": "^1.0.1",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.16.5",
    "eslint": "^9.31.0",
    "tsup": "^8.5.0",
    "typescript": "5.8.3"
  }
}
